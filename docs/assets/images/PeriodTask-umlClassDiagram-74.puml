    +finishDate : Date | null
}
"IPeriodLimit" <|.. "PeriodTask"
interface "IOwnership" {
    +owner : ITaskOwner | null
}
"IOwnership" <|.. "PeriodTask"
class "TextTask" {
    +content : TextTaskType
    +finishDate : Date | null
    +id : string
    +owner : ITaskOwner | null
    +status : ETaskStatus
    +toggle() : void
}
"PeriodTask" <|-- "TextTask"
class "AudioTask" {
    +content : MediaTaskType
    +finishDate : Date | null
