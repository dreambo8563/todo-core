@startuml
hide empty methods
hide empty fields
class "PeriodTask" {
    +content : T
    +finishDate : Date | null
    +id : string
    +owner : ITaskOwner | null
    +status : ETaskStatus
    +toggle() : void
}
class "Task" {
    +content : T
    +id : string
    +status : ETaskStatus
